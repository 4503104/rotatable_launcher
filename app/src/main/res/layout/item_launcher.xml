<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/launcher_grid_size"
    android:layout_height="@dimen/launcher_grid_size"
    android:layout_margin="0dp"
    android:padding="0dp">
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/launcher_icon_size"
        android:layout_height="@dimen/launcher_icon_size"
        android:layout_margin="@dimen/launcher_margin_size"
        android:layout_centerInParent="true" />
    <TextView
        android:id="@+id/app_label"
        android:textSize="10sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/launcher_margin_size"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center" />
</RelativeLayout>
